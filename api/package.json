{
  "name": "reaper",
  "version": "1.0.0",
  "description": "Ai Music Generator",
  "main": "src/app.ts",
  "author": "Heydaw",
  "license": "ISC",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "prepare": "yarn global add pm2 typescript",
    "server": "pm2 start src/app.ts --interpreter $(pwd)/node_modules/.bin/ts-node",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev src/app.ts",
    "start:prod": "cross-env NODE_ENV=production ts-node-dev src/app.ts",
    "stop": "pm2 stop src/app.ts",
    "kill": "pm2 delete app",
    "build": "tsc ",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "devdevdeploy": "cross-env NODE_ENV=production node build/src/app.js",
    "deploy": "npm run build && cross-env NODE_ENV=production pm2 start build/src/app.js",
    "test": "jest --watchAll"
  },
  "dependencies": {
    "@types/mongodb": "^4.0.7",
    "@types/nodemailer": "^6.4.12",
    "axios": "^1.5.1",
    "bcrypt": "^5.1.1",
    "config": "^3.3.9",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb-memory-server": "^8.15.1",
    "mongoose": "^7.6.0",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.1",
    "nodemailer": "^6.9.6",
    "pino": "^8.15.1",
    "pm2": "^5.3.0",
    "systeminformation": "^5.21.8",
    "winston": "^3.10.0",
    "yarn": "^1.22.19",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.3",
    "@types/config": "^3.3.1",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.199",
    "@types/mocha": "^10.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.5",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^20.6.5",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.13",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "pino-pretty": "^10.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
