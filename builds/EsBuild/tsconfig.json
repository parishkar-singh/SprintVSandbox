{
	"compilerOptions": {
		"sourceMap": true,
		"target": "ES2020",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "./src",
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"]
}
